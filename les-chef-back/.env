# 서버 설정
PORT=5000                    # 서버 포트 번호
HOST=localhost               # 서버 호스트

# 데이터베이스 설정
# DB_HOST=localhost            # 데이터베이스 호스트
# DB_PORT=27017                # 데이터베이스 포트 (MongoDB 예시)
# DB_NAME=mydatabase           # 데이터베이스 이름
# DB_USER=admin                # 데이터베이스 사용자 이름
# DB_PASSWORD=mysecretpassword # 데이터베이스 비밀번호

# # JWT 인증
# JWT_SECRET=myjwtsecretkey    # JWT 시크릿 키
# JWT_EXPIRATION=3600          # JWT 만료 시간 (초 단위)

# # API 키 (예시)
# GOOGLE_API_KEY=yourapikey    # 구글 API 키
# SENDGRID_API_KEY=yourapikey  # SendGrid 이메일 API 키

# # 이메일 서버 설정
# EMAIL_HOST=smtp.gmail.com    # 이메일 서버 호스트
# EMAIL_PORT=587               # 이메일 서버 포트
# EMAIL_USER=email@example.com # 이메일 서버 사용자
# EMAIL_PASSWORD=emailpassword # 이메일 서버 비밀번호
